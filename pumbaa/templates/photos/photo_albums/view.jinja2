{% extends "/base/topic-view.jinja2" %}
{# <%! from pumbaa import models %> #}
{% block title %}{{ photo_album.name }}{% endblock %}
{% block description %}{{ photo_album.description }}{% endblock %}
{% block where_am_i %}
<li><a href="${request.route_path('photos.photo_albums.index')}">Photo Albums</a></li>
<li><a href="${request.route_path('photos.photo_albums.view', photo_album_id=photo_album.id)}">${photo_album.name}</a></li>
{% endblock %}
{% block topic_title %}{{ photo_album.name }}{% endblock %}
{% block content %}
<div style="padding: 5px;">
	<p class="text-primary">
    {{ photo_album.description }}
	</p>
  {% if photo_album.event_date is defined and photo_album.event_date is not none %}
	<p class="text-primary">
  เหตุการณ์นี้เกิดขึ้นเมื่อ {{photo_album.event_date.date()}}
	</p>
{% endif %}
</div>

{% for photo in photo_album.photos %}
<a href="{{ url_for('photos.photo_albums.photo_view',
photo_album_id=photo_album.id, photo_id=photo.id)}}" >
<img class="img-thumbnail" style="{{'width:200px;' if photo.orientation == 'horizontal' else 'height:150px;'}}" alt="{{ photo.caption }}" src="{{
url_for('photos.thumbnail', photo_album_id=photo_album.id,
photo_id=photo.image.filename)}}" />
	</a>
{% endfor %}

{% endblock %}
{% block topic_footer %}
{% set topic = photo_album %}
{% include "/base/comments.jinja2" with context %}
{% endblock %}
